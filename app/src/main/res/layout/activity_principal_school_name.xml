<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".Principal.PrincipalSchoolName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_information"
            android:textColor="@color/blue"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_enter_school_details"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:minWidth="350dp"
            android:minHeight="350dp"
            android:soundEffectsEnabled="false"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/school" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:autofillHints=""
            android:background="@drawable/profile_textview"
            android:ems="10"
            android:gravity="clip_vertical"
            android:hint="@string/school_name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/texthintcolor"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:autofillHints=""
            android:background="@drawable/profile_textview"
            android:ems="10"
            android:gravity="clip_vertical"
            android:hint="@string/school_address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@color/texthintcolor"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:autofillHints=""
            android:background="@drawable/profile_textview"
            android:ems="6"
            android:gravity="clip_vertical"
            android:hint="@string/pincode"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColorHint="@color/texthintcolor"
            tools:ignore="RtlCompat,TextContrastCheck" />

        <Button
            android:id="@+id/btn_school_add"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:backgroundTint="@color/dark_blue"
            android:text="@string/continueword"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>